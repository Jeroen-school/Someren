@model Someren.Models.Lecturer
@{
    ViewData["Title"] = "Delete Lecturer";
}

<h2 class="form-title text-danger">Delete Lecturer</h2>

<div class="row justify-content-center form-container">
    <div class="col-md-8">
        <form action="/Lecturers/Delete" method="Post" class="student-form">

            @if (TempData["ErrorMessage"] != null)
            {
                <div class="alert alert-danger mx-0 mb-4">
                    <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
                </div>
            }

            <div class="card mb-4 border-danger">
                <div class="card-header bg-danger text-white">
                    <h3 class="m-0"><i class="fas fa-trash-alt me-2"></i> Remove Lecturer</h3>
                </div>
                <div class="card-body">
                    <div class="alert alert-info">
                        <p class="mb-0"><i class="fas fa-info-circle me-2"></i> This will move the lecturer to the deleted items. You can restore the lecturer later if needed.</p>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="LecturerId">Lecturer ID:</label>
                                <input type="number" id="LecturerId" name="LecturerId" class="form-control" readonly value="@Model?.LecturerId" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="RoomNumber">Room number:</label>
                                <input type="text" id="RoomNumber" name="RoomNumber" class="form-control" readonly value="@Model?.RoomNumber" />
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="FirstName">First name:</label>
                                <input type="text" id="FirstName" name="FirstName" class="form-control" readonly value="@Model?.FirstName" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="LastName">Last name:</label>
                                <input type="text" id="LastName" name="LastName" class="form-control" readonly value="@Model?.LastName" />
                            </div>
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="PhoneNumber">Telephone number:</label>
                                <input type="tel" id="PhoneNumber" name="PhoneNumber" class="form-control" readonly value="@Model?.PhoneNumber" />
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label for="Age">Age:</label>
                                <input type="number" id="Age" name="Age" class="form-control" readonly value="@Model?.Age" />
                            </div>
                        </div>
                    </div>


                    <div class="mb-4">
                        <div class="custom-confirmation-check p-3 border border-info rounded-3 bg-light">
                            <div class="d-flex align-items-center">
                                <div class="form-check form-switch">
                                    <input class="form-check-input" type="checkbox" role="switch" id="Confirmation"  required style="width: 3rem; height: 1.5rem;" />
                                </div>
                                <label class="ms-3 form-check-label fw-bold" for="Confirmation">
                                    I'd like to remove this lecturer
                                </label>
                            </div>
                            <small class="text-muted d-block mt-2">Please confirm by toggling the switch. The lecturer will be moved to the deleted items.</small>
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a href="/Lecturers/Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left me-2"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-primary shadow-button">
                        <i class="fas fa-check me-2"></i> Confirm
                    </button>
                </div>
            </div>
        </form>
    </div>
</div>