@model Someren.Models.Activity
@{
    ViewData["Title"] = "Create Activity";
}

<div class="card mb-4 fade-in">
    <div class="card-header">
        <h1 class="card-title">Create New Activity</h1>
        <a asp-action="Index" class="btn btn-primary shadow-button">
            <i class="fas fa-arrow-left me-2"></i> Back to List
        </a>
    </div>
    <div class="card-body">
       

        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label for="Activitytype" class="form-label">Activity Name</label>
                <input asp-for="Activitytype" class="form-control" required />
                <span asp-validation-for="Activitytype" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Date" class="form-label">Date</label>
                <input asp-for="Date" class="form-control" type="date" required min="2018-01-01" max="9999-12-31" />
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label for="Time" class="form-label">Time</label>
                <input asp-for="Time" class="form-control" type="time" required />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-center mt-4">
                <button type="submit" class="btn btn-primary shadow-button">
                    <i class="fas fa-plus-circle me-2"></i> Create Activity
                </button>
            </div>
        </form>
    </div>
</div>
