@model Someren.Models.Activity
@{
    ViewData["Title"] = "Delete Activity";
}

<h2>Delete Activity</h2>

<h3>Are you sure you want to delete this activity?</h3>
<div>
    <dl class="row">
        <dt class="col-sm-2">Activity Name</dt>
        <dd class="col-sm-10">@Model.Activitytype</dd>
        <dt class="col-sm-2">Date</dt>
        <dd class="col-sm-10">@Model.Date.ToShortDateString()</dd>
        <dt class="col-sm-2">Time</dt>
        <dd class="col-sm-10">@Model.Time</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" name="id" value="@Model.Activitytype" />
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </form>
</div>