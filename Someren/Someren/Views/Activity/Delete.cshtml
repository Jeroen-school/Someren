@model Someren.Models.Activity
@{
    ViewData["Title"] = "Delete Activity";
}
<div class="card mb-4 fade-in">
    <div class="card-header">
        <h1 class="card-title">Delete Activity</h1>
        <a asp-action="Index" class="btn btn-primary shadow-button">
            <i class="fas fa-arrow-left me-2"></i> Back to List
        </a>
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Note:</strong> This will move the activity to the deleted items. You can restore it later if needed.
        </div>
        <div class="card mb-4 border">
            <div class="card-header bg-light">
                <h5 class="mb-0">Activity Details</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">
                        <i class="fas fa-tag me-2"></i> Activity Name:
                    </div>
                    <div class="col-md-8">
                        @Model.Activitytype
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">
                        <i class="fas fa-calendar me-2"></i> Date:
                    </div>
                    <div class="col-md-8">
                        @Model.Date.ToShortDateString()
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">
                        <i class="fas fa-clock me-2"></i> Time:
                    </div>
                    <div class="col-md-8">
                        @Model.Time
                    </div>
                </div>
            </div>
        </div>
        <div class="d-flex justify-content-center">
            <button type="button" class="btn btn-danger shadow-button" data-bs-toggle="modal" data-bs-target="#deleteConfirmModal">
                <i class="fas fa-trash me-2"></i> Delete Activity
            </button>
        </div>
    </div>
</div>
<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title text-white">
                    <i class="fas fa-exclamation-triangle me-2"></i>Delete Confirmation
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete the activity: <span class="fw-bold">@Model.Activitytype</span>?</p>
                <p>The activity will be moved to the trash. You can restore it later if needed.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form asp-action="Delete" method="post">
                    <input type="hidden" name="id" value="@Model.Activitytype" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>