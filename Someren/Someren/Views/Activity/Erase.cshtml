@model Someren.Models.Activity
@{
    ViewData["Title"] = "Permanently Delete Activity";
}

<div class="card mb-4 fade-in">
    <div class="card-header">
        <h1 class="card-title">Permanently Delete Activity</h1>
        <a asp-action="ListDeleted" class="btn btn-primary shadow-button">
            <i class="fas fa-arrow-left me-2"></i> Back to List
        </a>
    </div>
    <div class="card-body">
        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle me-2 fa-lg"></i>
            <strong>WARNING:</strong> This action is irreversible and will permanently erase all data.
        </div>

        <div class="card mb-4 border">
            <div class="card-header bg-light">
                <h5 class="mb-0">Activity Details</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">
                        <i class="fas fa-tag me-2"></i> Activity Name:
                    </div>
                    <div class="col-md-8">
                        @Model.Activitytype
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">
                        <i class="fas fa-calendar me-2"></i> Date:
                    </div>
                    <div class="col-md-8">
                        @Model.Date.ToShortDateString()
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">
                        <i class="fas fa-clock me-2"></i> Time:
                    </div>
                    <div class="col-md-8">
                        @Model.Time
                    </div>
                </div>
            </div>
        </div>

        <form asp-action="Erase" method="post">
            <input type="hidden" name="id" value="@Model.Activitytype" />
            <input type="hidden" name="confirmed" value="true" />
            <div class="d-flex justify-content-center">
                <button type="submit" class="btn btn-danger shadow-button">
                    <i class="fas fa-trash me-2"></i> Permanently Delete
                </button>
            </div>
        </form>
    </div>
</div>