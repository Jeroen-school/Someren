@model Someren.Models.Activity
@{
    ViewData["Title"] = "Edit Activity";
    string originalType = ViewBag.OriginalType;
}

<h2>Edit Activity</h2>

<form asp-action="Edit">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" name="originalType" value="@originalType" />

    <div class="form-group">
        <label for="Activitytype">Activity Name</label>
        <input asp-for="Activitytype" class="form-control" />
        <span asp-validation-for="Activitytype" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Date">Date</label>
        <input asp-for="Date" class="form-control" type="date" />
        <span asp-validation-for="Date" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Time">Time</label>
        <input asp-for="Time" class="form-control" type="time" />
        <span asp-validation-for="Time" class="text-danger"></span>
    </div>

    <div class="form-group" style="margin-top: 20px;">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-secondary">Back to List</a>
    </div>
</form>