@model List<Someren.Models.Activity>
@{
    ViewData["Title"] = "Activity";
}
<h2>List of Activities</h2>

<div class="row mb-3">
    <div class="col-md-6">
        <form asp-action="Index" method="get">
            <div class="input-group">
                <input type="text" class="form-control" name="searchString"
                       placeholder="Search by activity name" value="@ViewData["CurrentFilter"]">
                <button type="submit" class="btn btn-primary">Search</button>
                <a asp-action="Index" class="btn btn-secondary">Clear</a>
            </div>
        </form>
    </div>
</div>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New Activity</a>
</p>

<table class="table table-striped table-hover" style="width:100%; text-align:left;">
    <thead>
        <tr>
            <th>Activity Name</th>
            <th>Date</th>
            <th>Time</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null && Model.Count > 0)
        {
            @foreach (var activity in Model)
            {
                <tr>
                    <td>@activity.Activitytype</td>
                    <td>@activity.Date.ToShortDateString()</td>
                    <td>@activity.Time</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@activity.Activitytype" class="btn btn-sm btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@activity.Activitytype" class="btn btn-sm btn-danger">Delete</a>
                    </td>
                </tr>
            }
        }
        else
        {
            <tr>
                <td colspan="4" style="text-align:center;">No activities found.</td>
            </tr>
        }
    </tbody>
</table>