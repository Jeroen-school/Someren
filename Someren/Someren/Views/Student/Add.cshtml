@model Someren.Models.Student
@{
    ViewData["Title"] = "Add a student";
}

<h2 class="form-title">Add a new student</h2>

<form action="/Student/Add" method="POST" class="student-form">
    <fieldset>
        <div class="form-group">
            <label for="student_number" class="form-label">Student number:</label>
            <input type="text" id="student_number" name="student_number" required value="@Model?.StudentNum"/>
        </div>

        <div class="form-group">
            <label for="room_number" class="form-label">Room number:</label>
            <input type="text" id="room_number" name="room_number" required value="@Model?.RoomNum" />
        </div>

        <div class="form-group">
            <label for="first_name" class="form-label">First name:</label>
            <input type="text" id="first_name" name="first_name" required value="@Model?.FirstName"/>
        </div>

        <div class="form-group">
            <label for="last_name" class="form-label">Last name:</label>
            <input type="text" id="last_name" name="last_name" required value="@Model?.LastName"/>
        </div>

        <div class="form-group">
            <label for="telephone_number" class="form-label">Telephone number:</label>
            <input type="text" id="last_name" name="last_name" required value="@Model?.LastName"/>
        </div>

        <div class="form-group">
            <label for="class" class="form-label">Class:</label>
            <input type="text" id="class" name="class" required value="@Model?.StudentClass" />
        </div>

        <button type="submit" class="btn shadow-button">Add</button>
    </fieldset>
</form>
