@model List<Someren.Models.Room>
@{
    ViewData["Title"] = "Room";
}

<div class="container py-5">
    <h1 class="display-4 mb-4 text-center">Room Management</h1>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <a href="/Room/Add" class="btn btn-success"><i class="bi bi-plus-circle"></i> Add Room</a>

        <form method="get" action="/Room/Index" class="d-flex w-50">
            <label for="Size">Filter by Size:</label>
            <select id="Size" name="Size" class="form-select me-2"
                    onchange="this.form.submit()"
            @(ViewBag.SelectedSize != null ? "disabled" : "")>
                <option value="">All</option>
                @foreach (var size in ViewBag.Sizes)
                {
                    <option value="@size" selected="@(ViewBag.SelectedSize == size ? "selected" : null)">@size</option>
                }
            </select>

            @if (ViewBag.SelectedSize != null)
            {
                <a href="/Room/Index" class="btn btn-secondary">Clear Filter</a>
            }
        </form>
    </div>

    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th class="col-4">Room Number</th>
                <th class="col-4">Type</th>
                <th class="col-2">Size</th>
                <th class="col-2 text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td>@room.RoomNumber</td>
                    <td>@room.Type</td>
                    <td>@room.Size</td>
                    <td class="text-center">
                        <a href="/Room/Edit/@room.RoomId" class="btn btn-warning btn-sm me-2"><i class="bi bi-pencil"></i> Edit</a>
                        <a href="/Room/Delete/@room.RoomId" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Add Bootstrap Icons (for Edit and Delete buttons) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
