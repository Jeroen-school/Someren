@model List<Someren.Models.Room>
@{
    ViewData["Title"] = "Room";
}

<div class="container py-5">
    <h1 class="display-4 mb-4 text-center">Room Management</h1>
    <a href="/Room/Add" class="btn btn-success mb-4"><i class="bi bi-plus-circle"></i> Add Room</a>

    <table class="table table-striped table-bordered table-hover">
        <thead class="thead-dark">
            <tr>
                <th class="col-4">Room Number</th>
                <th class="col-4">Type</th>
                <th class="col-2">Size</th>
                <th class="col-2 text-center">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var room in Model)
            {
                <tr>
                    <td>@room.RoomNumber</td>
                    <td>@room.Type</td>
                    <td>@room.Size</td>
                    <td class="text-center">
                        <a href="/Room/Edit/@room.RoomNumber" class="btn btn-warning btn-sm me-2"><i class="bi bi-pencil"></i> Edit</a>
                        <a href="/Room/Delete/@room.RoomNumber" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<!-- Add Bootstrap Icons (for Edit and Delete buttons) -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">
