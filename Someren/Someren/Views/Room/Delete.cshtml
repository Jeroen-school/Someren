@model Someren.Models.Room
@{
    ViewData["Title"] = "Delete Room";
}

<div class="card mb-4 fade-in">
    <div class="card-header">
        <h1 class="card-title">Delete Room</h1>
        <a href="/Room" class="btn btn-primary shadow-button">
            <i class="fas fa-arrow-left me-2"></i> Back to List
        </a>
    </div>
    <div class="card-body">
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger mx-0 mb-4">
                <i class="fas fa-exclamation-circle me-2"></i> @TempData["ErrorMessage"]
            </div>
        }

        <div class="alert alert-danger">
            <i class="fas fa-exclamation-circle me-2 fa-lg"></i>
            <strong>SEVERE WARNING:</strong> This action is irreversible and will permanently erase all data.
        </div>

        <div class="card mb-4 border">
            <div class="card-header bg-light">
                <h5 class="mb-0">Room Details</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">
                        <i class="fas fa-door-open me-2"></i> Room Number:
                    </div>
                    <div class="col-md-8">
                        @Model?.RoomNumber
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">
                        @if (Model?.Type == "Lecturer")
                        {
                            <i class="fas fa-user-tie me-2"></i>
                        }
                        else
                        {
                            <i class="fas fa-user-graduate me-2"></i>
                        }
                        Room Type:
                    </div>
                    <div class="col-md-8">
                        @(Model?.Type == "Lecturer" ? "Lecturer Room" : "Student Room")
                    </div>
                </div>
                <div class="row mb-3">
                    <div class="col-md-4 fw-bold">
                        <i class="fas fa-users me-2"></i> Room Size:
                    </div>
                    <div class="col-md-8">
                        @Model?.Size @(Model?.Size == 1 ? "Person" : "People")
                    </div>
                </div>
            </div>
        </div>

        <div class="d-flex justify-content-center">
            <button type="button" class="btn btn-danger shadow-button" data-bs-toggle="modal" data-bs-target="#deleteConfirmModal">
                <i class="fas fa-trash me-2"></i> Delete Room
            </button>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteConfirmModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title text-white">
                    <i class="fas fa-exclamation-triangle me-2"></i>Permanent Deletion
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-danger">
                    <i class="fas fa-exclamation-circle me-2 fa-lg"></i>
                    <strong>SEVERE WARNING:</strong> This action is irreversible and will permanently erase all data.
                </div>
                <p>Are you absolutely sure you want to <span class="permanent-delete-warning">permanently delete</span> room <span class="fw-bold">@Model?.RoomNumber</span>?</p>
                <p>Once deleted, this data <strong>cannot be recovered</strong> by any means. This operation removes all record of this room from the database.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                <form action="/Room/Delete" method="POST">
                    <input type="hidden" name="RoomId" value="@Model?.RoomId" />
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-2"></i>Delete Permanently
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>